app.ts file
import { Component, Inject, OnInit } from '@angular/core';
import { FormGroup, FormControl, FormArray, Validators } from '@angular/forms'
@Component({
	selector: 'app-root',
	templateUrl: './app.component.html',
	styleUrls: [ './app.component.css' ]
})
export class AppComponent implements OnInit {
  
  restricatednames=['pratham'];
  signupform!: FormGroup;
  
  ngOnInit(): void {
    // console.log(this)
   this.signupform=new FormGroup({
    'username':new FormControl(null,[Validators.required,this.isrestrictednames.bind(this)])
    
   })
  }
	isrestrictednames(control:FormControl):{[s:string]:boolean}{
    if(this.restricatednames.includes(control.value)){
      console.log(this)
      console.log("true");
      
      return {namer:true};
    }
    console.log("false");
    
    return {namer:false};
  }
  onsubmit(){
    console.log(this.signupform);
    
  }
}

html file
<br>
<form [formGroup]="signupform" (ngSubmit)="onsubmit()">
	<input formControlName="username" placeholder="Name">
	
<br>
<button type='submit'>Submit</button>
