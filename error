app.html

<div class="container">
  <div class="input-container">
    <form  >
      <div class="input-tag">
        <label for="tag-input"> Enter Text:</label>
        <input   type="text" id="tag-input" name="tag-input" [(ngModel)]="newTagValue" required>
      </div>
    </form>
  </div>
  <div class="change-container">
    <div class="select-container">
      <label for="text-color">Text Color:</label>
      <select id="text-color" [(ngModel)]="selectedTextColor">
        <option *ngFor="let color of color" [value]="color">{{ color }}</option>
      </select>
    </div>
    <div class="select-container">
      <label for="background-color">Background Color:</label>
      <select id="background-color" [(ngModel)]="selectedBackgroundColor">
        <option *ngFor="let backgroundColor of background_color" [value]="backgroundColor">{{ backgroundColor }}</option>
      </select>
    </div>
    <div class="select-container">
      <label for="font-size-select">Font Size:</label>
      <select id="font-size-select" [(ngModel)]="selectedFontSize">
        <option *ngFor="let fontSize of font_size" [value]="fontSize">{{ fontSize }}</option>
      </select>
    </div>
  </div>
  <div class="result-container" *ngIf="newTagValue!=''">
   <span [ngStyle]="getStyle()"> {{newTagValue}}</span>
  </div>
</div>


