#include <iostream>
  
using namespace std;

 
int
main () 
{
  
int n;
  
cin >> n;
  
int k, m = n;
  
int flag = 1;
  
for (int i = (n * 2) - 1; i > 0; i--)
    
    {
      
k = n;
      
for (int j = (n * 2) - 1; j > 0; j--)
	
	{
	  
cout << k; 
	  
if (k > m && j > n - m)
	    
	    {
	      
k--;
	    
}
	  
if (j <= (n - m + 1))
	    
	    {
	      
k++;
	    
}
	
}
      
cout << endl;
      
if (m > 1 && flag)
	
	{
	  
m--;
	
}
      
      else
	
	{
	  
flag = 0;
	  
m++;
	
}
    
}
  
return 0;

}


