<app-header id="header" #header></app-header>
<app-typing id="typing" #typing></app-typing>
<app-modal id="modal" #modal></app-modal>



this is the app.ts

import { Component,OnChanges,OnDestroy,OnInit,DoCheck,AfterContentChecked,AfterContentInit,AfterViewChecked,AfterViewInit, ViewChild, ElementRef } from '@angular/core';
import { ParagraphService } from './paragraph.service';

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent implements OnInit {
  title = 'practice'
  @ViewChild('header') header!: ElementRef;
@ViewChild('modal') modal!: ElementRef;
@ViewChild('typing') typing!: ElementRef;

  constructor(private paragraphservice:ParagraphService){

  }
  ngOnInit(): void {
    this.paragraphservice.modalchange.subscribe(res=>{
    
      
      if(res==true){
        console.log("modl open");
        const header: HTMLDivElement = this.header.nativeElement;
       
        
        const modal: HTMLDivElement = this.modal.nativeElement;
        const typing: HTMLDivElement = this.typing.nativeElement;
        header.style.opacity='0';
        typing.style.opacity='0';
        modal.style.opacity='1';
      }
    })
  }
 
  
}


this is angular file main app file but in this header modal and typing showing undefined in ts
